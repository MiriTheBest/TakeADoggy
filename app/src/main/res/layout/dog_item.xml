<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="4dp"
    android:elevation="8dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/favdog_IMG_pic"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_above="@id/dog_BTN_adopt"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:id="@+id/dog_LAYOUT_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/favdog_IMG_pic"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dog_LBL_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:minLines="1"
                android:text="NAME,"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dog_LBL_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:minLines="1"
                android:text="0,"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dog_LBL_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLines="1"
                android:minLines="1"
                android:text="F"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/dog_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_below="@id/dog_LAYOUT_name"
            android:layout_toEndOf="@id/favdog_IMG_pic"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dog_LBL_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="Breed,"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dog_LBL_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="Size"
                android:textSize="20sp" />
        </LinearLayout>

<!--        <com.google.android.material.textview.MaterialTextView-->
<!--            android:id="@+id/dog_LBL_attributes"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginStart="180dp"-->
<!--            android:layout_below="@id/dog_line2"-->
<!--            android:maxLines="1"-->
<!--            android:minLines="1"-->
<!--            android:text="Attributes: "-->
<!--            android:textSize="20sp" />-->


        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/favdog_IMG_pic"
            android:layout_below="@id/dog_line2"
            android:id="@+id/dog_layout_attributes"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dog_LBL_att1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="Att1, "
                android:textSize="20sp" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dog_LBL_att2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="Att2, "
                android:textSize="20sp" />

        </LinearLayout>

<!--        <com.google.android.material.textview.MaterialTextView-->
<!--            android:id="@+id/dog_LBL_restrictions"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_toRightOf="@id/dog_LBL_attributes"-->
<!--            android:layout_below="@id/dog_line2"-->
<!--            android:maxLines="1"-->
<!--            android:minLines="1"-->
<!--            android:text="Constraints:"-->
<!--            android:textSize="20sp" />-->


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_below="@id/dog_line2"
            android:layout_toRightOf="@id/dog_layout_attributes"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dog_LBL_restr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="Restr1, "
                android:textSize="20sp" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/dog_LBL_restr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="restr2, "
                android:textSize="20sp" />

        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/dog_IMG_favorite"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/heart_empty" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dog_BTN_adopt"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dog_layout_attributes"
            android:text="Adopt" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>